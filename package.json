{
  "name": "mkdo",
  "description": "Markdown task runner",
  "license": "MIT",
  "author": "TSUYUSATO Kitsune <make.just.on@gmail.com>",
  "repository": "https://github.com/MakeNowJust/mkdo",
  "version": "0.3.0",
  "main": "./dist/src/index.js",
  "bin": {
    "mkdo": "./dist/bin/mkdo.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "ts-node ./bin/mkdo.ts build",
    "ci": "ts-node ./bin/mkdo.ts ci",
    "format": "ts-node ./bin/mkdo.ts format",
    "format:check": "ts-node ./bin/mkdo.ts format:check",
    "mkdo": "ts-node ./bin/mkdo.ts"
  },
  "types": "./dist/src/index.d.ts",
  "dependencies": {
    "arg": "^5.0.0",
    "cosmiconfig": "^5.1.0",
    "execa": "^1.0.0",
    "mdast-util-to-string": "^2.0.0",
    "picomatch": "^2.0.0",
    "read-pkg-up": "^5.0.0",
    "remark-parse": "^10.0.0",
    "to-vfile": "^6.0.0",
    "unified": "^9.0.0"
  },
  "devDependencies": {
    "@types/cosmiconfig": "5.0.3",
    "@types/execa": "0.9.0",
    "@types/read-pkg-up": "3.0.1",
    "prettier": "1.18.2",
    "prettier-package-json": "2.1.3",
    "ts-node": "9.1.1",
    "typescript": "4.3.5"
  },
  "mkdo": {
    "file": "readme.md",
    "rootDepth": 2,
    "rootPattern": "Tasks"
  }
}
